FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["src/Gateway/AeroLux.Gateway/AeroLux.Gateway.csproj", "src/Gateway/AeroLux.Gateway/"]
RUN dotnet restore "src/Gateway/AeroLux.Gateway/AeroLux.Gateway.csproj"
COPY . .
WORKDIR "/src/src/Gateway/AeroLux.Gateway"
RUN dotnet build "AeroLux.Gateway.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "AeroLux.Gateway.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "AeroLux.Gateway.dll"]
